import numpy as np
import matplotlib.pyplot as plt

# Ejemplo de meses y gastos reales
meses = np.arange(1, 7)  # Meses de enero a junio
gastos = np.array([1200, 1150, 1230, 1190, 1250, 1300])  # Gastos en cada mes

# Ajuste de regresión lineal usando numpy
coef = np.polyfit(meses, gastos, 1)  # coef[0]=pendiente, coef[1]=intersección
gastos_estimados = coef[0]*meses + coef[1]

# Graficar datos reales y la recta ajustada
plt.scatter(meses, gastos, color='blue', label='Gastos reales')
plt.plot(meses, gastos_estimados, color='red', label='Recta ajustada')
plt.xlabel('Mes')
plt.ylabel('Gasto ($)')
plt.title('Regresión lineal de gastos mensuales')
plt.legend()
plt.grid(True)
plt.show()